<%- include("partials/header.ejs") %>

    <div class="container-lg my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    <div class="card-header bg-dark text-light fs-5 fw-bold text-center">
                        Random Anime Quote
                    </div>
                    <div class="card-body bg-light">
                        <% if (locals.quote && locals.animeName && locals.character) { %>
                            <blockquote class="blockquote mb-4">
                                <p class="mb-3 fs-4 text-primary">“<%= quote %>”</p>
                                <footer class="blockquote-footer text-end">
                                    <span class="fw-semibold">Character:</span> <span class="text-dark">
                                        <%= character %>
                                    </span>
                                </footer>
                            </blockquote>
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item bg-light"><strong>Anime:</strong> <span
                                        class="text-secondary">
                                        <%= animeName %>
                                    </span></li>
                                <% if (altName) { %>
                                    <li class="list-group-item bg-light"><strong>Alt Name:</strong> <span
                                            class="text-secondary">
                                            <%= altName %>
                                        </span></li>
                                    <% } %>
                            </ul>
                            <% } else { %>
                                <div class="alert alert-warning">No quote found.</div>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>